to di errore\n          console.error('Registration error:', error.response.data);\n          alert(`Errore nella registrazione: ${error.response.data.message || error.message}`);\n        } else {\n          // Qualcosa è andato storto nel fare la richiesta\n          console.error('Error making request:', error.message);\n          alert(`Errore nella registrazione: ${error.message}`);\n        }\n      }\n    };\n\n    return { form, onSubmit };\n  }\n};\n</script>\n\n<style scoped>\n/* Aggiungi stili personalizzati qui se necessario */\n</style>\n"],"mappings":";AAyBA,SAASA,GAAE,QAAS,KAAK;AACzB,SAASC,SAAQ,QAAS,YAAY;AACtC,OAAOC,KAAI,MAAO,OAAO;AAEzB,eAAe;EACbC,IAAI,EAAE,cAAc;EACpBC,KAAKA,CAAA,EAAG;IACN,MAAMC,IAAG,GAAIL,GAAG,CAAC;MACfM,QAAQ,EAAE,EAAE;MACZH,IAAI,EAAE,EAAE;MACRI,QAAQ,EAAE;IACZ,CAAC,CAAC;IAEF,MAAMC,MAAK,GAAIP,SAAS,CAAC,CAAC;IAE1B,MAAMQ,QAAO,GAAI,MAAAA,CAAA,KAAY;MAC3B,IAAI;QACF,MAAMC,QAAO,GAAI,MAAMR,KAAK,CAACS,IAAI,CAAC,0CAA0C,EAAEN,IAAI,CAACO,KAAK,CAAC;QACzFC,KAAK,CAAC,qCAAqC,CAAC;QAC5CC,OAAO,CAACC,GAAG,CAAC,kBAAkB,EAAEL,QAAQ,CAACM,IAAI,CAAC;QAC9CX,IAAI,CAACO,KAAI,GAAI;UAAEN,QAAQ,EAAE,EAAE;UAAEH,IAAI,EAAE,EAAE;UAAEI,QAAQ,EAAE;QAAG,CAAC,EAAE;QACvD;QACAC,MAAM,CAACS,IAAI,CAAC;UAAEd,IAAI,EAAE,SAAS;UAAEe,KAAK,EAAE;YAAEZ,QAAQ,EAAED,IAAI,CAACO,KAAK,CAACN;UAAS;QAAE,CAAC,CAAC;MAC5E,EAAE,OAAOa,KAAK,EAAE;QACd,IAAIA,KAAK,CAACT,QAAQ,EAAE;UAClB;UACAI,OAAO,CAACK,KAAK,CAAC,qBAAqB,EAAEA,KAAK,CAACT,QAAQ,CAACM,IAAI,CAAC;UACzDH,KAAK,CAAC,+BAA+BM,KAAK,CAACT,QAAQ,CAACM,IAAI,CAACI,OAAM,IAAKD,KAAK,CAACC,OAAO,EAAE,CAAC;QACtF,OAAO;UACL;UACAN,OAAO,CAACK,KAAK,CAAC,uBAAuB,EAAEA,KAAK,CAACC,OAAO,CAAC;UACrDP,KAAK,CAAC,+BAA+BM,KAAK,CAACC,OAAO,EAAE,CAAC;QACvD;MACF;IACF,CAAC;IAED,OAAO;MAAEf,IAAI;MAAEI;IAAS,CAAC;EAC3B;AACF,CAAC","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}